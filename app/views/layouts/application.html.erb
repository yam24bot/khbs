<!DOCTYPE html>
<html>
  <head>
    <title>Khbs</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">Аналитика <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="#">Рейтинги <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="#">Видеообзоры <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="#">Календарь <span class="sr-only">(current)</span></a>
          </li>
        </ul>
        <ul class="navbar-nav ">
          <li class="nav-item active">
            <a class="nav-link" href="#">Вход <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="#">Регистрация <span class="sr-only">(current)</span></a>
          </li>
        </ul>
      </div>
    </nav>

    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <p id="notice"><%= notice %></p>

    <%= yield %>
  </body>
</html>
